package com.darcey.debug
{
	// -------------------------------------------------------------------------------------------------------------------------------
	import com.darcey.debug.Ttrace;
	
	import flash.utils.describeType;

	// -------------------------------------------------------------------------------------------------------------------------------
	
	
	
	// -------------------------------------------------------------------------------------------------------------------------------
	public class TraceObject
	{
		// ---------------------------------------------------------------------------------------------------------------------------
		private var t:Ttrace;
		// ---------------------------------------------------------------------------------------------------------------------------
		
		
		
		// ---------------------------------------------------------------------------------------------------------------------------
		public function TraceObject(o:*)
		{
			var description:XML = describeType(o);
			
			try {
				trace("Properties:\n------------------");
				for each (var a:XML in description.accessor) trace(a.@name+" : "+a.@type);
				
				trace("\n\nMethods:\n------------------");
				for each (var m:XML in description.method) {
					trace(m.@name+" : "+m.@returnType);
					if (m.parameter != undefined) {
						trace("     arguments");
						for each (var p:XML in m.parameter) trace("               - "+p.@type);
					}
				}
			} catch (e:Error) {}
			
			
			try {
				trace("");
				for (var prop:* in o) {
					trace("\t"+prop+":\t"+o[prop]);
				}
			} catch (e:Error) {}
			
			
			
		}
		// ---------------------------------------------------------------------------------------------------------------------------
		
		
		
	}
	// -------------------------------------------------------------------------------------------------------------------------------
}